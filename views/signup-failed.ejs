  <div class="message-container">
    <% if(locals.message){ %>
      <h1>Login Unsuccessful</h1>
      <h2 style="color: #ff0000;"><%= message %></h2>
    <% } else { %>
      <h1>Signup Unsuccessful</h1>
      <% } %>
      <h2 style="color: #000000;">Try Again <a href="http://localhost:3000/login">Login</a> </h2>
  </div>

</body>
